#!/usr/bin/env python

import sys, logging
logging.basicConfig()

from http_replay import HttpReplayDb, HttpReplayServer

def main(args):
    srv = { 'host': '127.0.0.1', 'port': 3128 }

    db = HttpReplayDb()
    for f in args:
        db.load_cap_file(f)

    print('%d entries in HTTP req/rep database' % db.count())
    # db.dump()

    srv['db'] = db
    HttpReplayServer(**srv).start()

if __name__ == '__main__':
    main(sys.argv[1:])

